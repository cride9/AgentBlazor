@if (IsUserMessage)
{
    <div class="flex items-start gap-3 justify-end">
        <div class="relative">
            <div class="bubble-right bg-purple-100 dark:bg-[#6c667e] dark:text-white px-4 py-2 rounded-2xl rounded-tr-none shadow-sm max-w-[70vw]">
                <p class="text-sm leading-relaxed whitespace-pre-wrap">@Text</p>
            </div>
            <div class="mt-1 text-xs text-gray-400 dark:text-gray-500">@Timestamp</div>
        </div>
    </div>
}
else
{
    <div class="flex items-start gap-3">
        <img src="@AvatarUrl" alt="avatar" class="w-10 h-10 rounded-full flex-shrink-0 md:block hidden">
        <div class="relative">
            <div class="bubble-left bg-white dark:bg-[#2b2b2b] text-gray-900 dark:text-gray-100 px-4 py-2 rounded-2xl rounded-tl-none shadow-sm max-w-[70vw]">
                @if (ToolCalls.Any())
                {
                    <div class="mb-2 p-2 border border-gray-200 dark:border-gray-700 rounded-lg">
                        <p class="text-xs font-semibold text-gray-500 dark:text-gray-400 mb-1">Tool Calls:</p>
                        @foreach (var toolCall in ToolCalls)
                        {
                            <div class="flex items-center text-xs space-x-2 p-1 rounded-md bg-gray-50 dark:bg-gray-800 mb-1">
                                <span class="text-purple-600 dark:text-purple-300 font-medium">@toolCall.Name</span>
                                <span class="text-gray-500 dark:text-gray-400">(@toolCall.Arguments)</span>
                                <span class="ml-auto font-bold @(toolCall.Status == "Calling..." ? "text-yellow-500 animate-pulse" : "text-green-500")">@toolCall.Status</span>
                            </div>
                        }
                    </div>
                }
                <p class="prose prose-sm dark:prose-invert text-sm leading-snug">
                    <MarkdownStream Text="@Text"></MarkdownStream>
                </p>
            </div>
            <div class="mt-1 text-xs text-gray-400 dark:text-gray-500 ml-1">@Timestamp</div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsUserMessage { get; set; }
    [Parameter] public string Text { get; set; } = string.Empty;
    [Parameter] public string Timestamp { get; set; } = string.Empty;
    [Parameter] public string? AvatarUrl { get; set; }
    [Parameter] public bool IsStreaming { get; set; }
    [Parameter] public List<ToolCallModel> ToolCalls { get; set; } = new();
}